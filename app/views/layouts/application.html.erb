<!DOCTYPE html>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>

<html>
<head>
  <title>DND Helper</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "materialize" %>
</head>


<% def is_active?(path)
    'active' if current_page?(path)
   end %>

<nav>
  <div class="nav-wrapper">
    <a href="/" style="padding-top: 8px; padding-left: 15px;" class="brand-logo">
      <%= image_tag "vg.png"%>
    </a>
    <ul class="right hide-on-med-and-down">
      <li class="<%= is_active?('/map') %>"><a href="/map" class="waves-effect waves-light btn">MAP</a></li>
      <li class="<%= is_active?('/xp') %>"><a href="/xp" class="waves-effect waves-light btn">XP-Tracker</a></li>
    </ul>
  </div>
</nav>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="js/materialize.min.js"></script>

<body>

<%= yield %>

</body>

</html>
