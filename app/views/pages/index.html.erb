<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% if @pages %>
    <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.text %></td>
          <td><%= link_to 'Show', page %></td>
          <td><%= link_to 'Edit', edit_page_path(page) %></td>
          <td><%= link_to 'Destroy', page, confirm: 'Are you sure?', method: :delete %></td>
        </tr>
    <% end %>
  <% end %>
</table>

